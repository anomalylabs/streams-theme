{% extends "theme::layouts/login" %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-8">
                {{ form_open({'method': 'post', 'class': 'ui form'}) }}

                <h1 class="ui header">
                    {{ image("theme::img/icon-dark.png").width(64)|raw }}
                </h1>

                <div class="form-group">
                    {{ form_email("email", null, {'class': 'form-control', 'placeholder': 'Email'}) }}
                </div>

                <div class="form-group">
                    {{ form_password('password', {'class': 'form-control', 'placeholder': 'Password'}) }}
                </div>

                <div class="form-group">
                    {{ form_checkbox("remember", null, false, {'id': 'remember'}) }}
                    <label>{{ trans('anomaly.module.users::admin.remember_me') }}</label>
                </div>

                <div class="form-group">
                    <button type="submit" value="Login" class="btn btn-primary btn-lg btn-block" onclick="$('.ui.dimmer').addClass('active');">
                        {{ trans('anomaly.module.users::button.login') }}
                    </button>
                </div>

                {{ form_close() }}
            </div>
        </div>
    </div>

{% endblock %}

{% extends "theme::layouts/login" %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-9">
                {{ form_open({'method': 'post', 'class': 'form'}) }}

                <div class="form-group">
                    {{ form_email("email", null, {'class': 'form-control', 'placeholder': 'Email'}) }}
                </div>

                <div class="form-group">
                    {{ form_password('password', {'class': 'form-control', 'placeholder': 'Password'}) }}
                </div>

                <div class="form-group">
                    <label class="checkbox">
                        {{ form_checkbox("remember", null, false, {'id': 'remember'}) }}
                        {{ trans('anomaly.module.users::login.remember_me') }}
                    </label>
                </div>

                <div class="form-group">
                    <button type="submit" value="Login" class="btn btn-primary btn-lg btn-block">
                        {{ trans('anomaly.module.users::button.login') }}
                    </button>
                </div>

                {{ form_close() }}
            </div>
        </div>
    </div>

{% endblock %}

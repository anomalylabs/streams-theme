<section class="container-fluid" id="toolbar">

    <div class="title">
        <a href="{{ url('admin/' ~ module().getSlug()) }}" data-toggle="dropdown">
            {{ trans(module().name()) }}
            {% if cp_sections() %}
                <i class="fa fa-lg fa-angle-double-right"></i>
            {% endif %}
        </a>
    </div>
    
    {% if cp_sections() %}
        <ul class="sections nav nav-pills">
            {% for section in cp_sections() %}
                <li class="{{ section.active ? 'active' }}">
                    <a {{ html_attributes(section.attributes) }}>
                        {{ trans(section.text) }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    <div class="buttons">
        {{ buttons(cp_buttons())|raw }}
    </div>

</section>